<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}ESGaming{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="http://fonts.googleapis.com/icon?family=Material+Icons">
            <link rel="stylesheet" href="{{ asset('css/materialize.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

            {% block nav %}
                <div class="container">
                    <div class="row">
                        <ul id="dropdown1" class="dropdown-content">
                            {% if app.user is empty %}
                                <li><a href="{{ path('login') }}">Se Connecter</a></li>
                                <li><a href="{{ path('es_gaming_user_register') }}">S'inscrire</a></li>
                            {% else %}
                                <li> <a href="{{ path('es_gaming_user_profile') }}">Afficher mon profil</a> </li>
                                <li><a href="{{ path('logout') }}">Se deconnecter</a></li>
                            {% endif %}
                        </ul>
                        <nav class="col s12">
                            <div class="nav-wrapper">
                                <a href="{{ path('es_gaming_home_homepage') }}" class="brand-logo"><img height="35px" src="{{ asset('images/esgaming.png') }}" alt="logo"></a>
                                <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
                                <ul class="hide-on-med-and-down">
                                    <li><a href="{{ path('es_gaming_game_homepage') }}">Jeux</a></li>
                                    <li><a href="{{ path('es_gaming_new_homepage') }}">News</a></li>
                                    <li><a href="badges.html">Contact</a></li>
                                    <li><a href="{{ path('es_gaming_event_homepage') }}">Event</a></li>
                                    <li><a href="badges.html">A propos</a></li>
                                    <!-- Dropdown Trigger -->
                                   <!-- <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Dropdown<i class="material-icons right">arrow_drop_down</i></a></li>-->
                                </ul>
                                <ul class="right hide-on-med-and-down">
                                    <li><a class="dropdown-button" href="#!" data-activates="dropdown1"><img height="50px" src="{{ asset('images/pluswhite.png') }}" alt="plus"></a></li>
                                </ul>
                                <ul class="side-nav" id="mobile-demo">
                                    <li><a href="{{ path('es_gaming_game_homepage') }}">Jeux</a></li>
                                    <li><a href="{{ path('es_gaming_new_homepage') }}">News</a></li>
                                    <li><a href="badges.html">Contact</a></li>
                                    <li><a href="{{ path('es_gaming_event_homepage') }}">Event</a></li>
                                    <li><a href="badges.html">A propos</a></li>
                                    {% if app.user is empty %}
                                        <li><a href="{{ path('login') }}">Se Connecter</a></li>
                                        <li><a href="{{ path('es_gaming_user_register') }}">S'inscrire</a></li>
                                    {% else %}
                                        <li> <a href="{{ path('es_gaming_user_profile') }}">Afficher mon profil</a> </li>
                                        <li><a href="{{ path('logout') }}">Se deconnecter</a></li>
                                    {% endif %}
                                </ul>

                            </div>
                        </nav>
                    </div>
                </div>
            {% endblock %}
            <div class="container">
             <div class="row">
                {% block header %} <header></header>    {% endblock %}

                {% block corps %}

                {% endblock %}

                 {% block footer %}
                     <div class="foot col s12">
                         <footer class="page-footer">
                                     <div class="col l6 s12">
                                         <h5 class="white-text">Footer Content</h5>
                                         <p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
                                     </div>
                                     <div class="col l4 offset-l2 s12">
                                         <h5 class="white-text">Links</h5>
                                         <ul>
                                             <li><a class="grey-text text-lighten-3" href="#!">Link 1</a></li>
                                             <li><a class="grey-text text-lighten-3" href="#!">Link 2</a></li>
                                             <li><a class="grey-text text-lighten-3" href="#!">Link 3</a></li>
                                             <li><a class="grey-text text-lighten-3" href="#!">Link 4</a></li>
                                         </ul>
                                     </div>
                         </footer>
                     </div>
                 {% endblock %}
             </div>
            </div>



            {% block javascripts %}
                <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
                <script src="{{ asset('js/materialize.min.js') }}"></script>
                <script src="{{ asset('js/style.js') }}"></script>
            {% endblock %}
    </body>
</html>

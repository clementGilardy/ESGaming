<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}ESGaming{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="http://fonts.googleapis.com/icon?family=Material+Icons">
            <link rel="stylesheet" href="{{ asset('css/materialize.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            {% block nav %}
                <ul id="dropdown1" class="dropdown-content">
                    {% if app.user is empty %}
                        <li><a href="{{ path('login') }}">Se Connecter</a></li>
                        <li><a href="{{ path('es_gaming_user_register') }}">S'inscrire</a></li>
                    {% else %}
                        <li> <a href="{{ path('es_gaming_user_profile') }}">Afficher mon profil</a> </li>
                        <li><a href="{{ path('logout') }}">Se deconnecter</a></li>
                    {% endif %}
                </ul>
                <nav>
                    <div class="nav-wrapper">
                        <a href="{{ path('es_gaming_home_homepage') }}" class="brand-logo"><img height="35px" src="{{ asset('images/esgaming.png') }}" alt="logo"></a>
                        <ul class="hide-on-med-and-down">
                            <li><a href="{{ path('es_gaming_game_homepage') }}">Jeux</a></li>
                            <li><a href="{{ path('es_gaming_new_homepage') }}">News</a></li>
                            <li><a href="badges.html">Contact</a></li>
                            <li><a href="">Event</a></li>
                            <li><a href="badges.html">A propos</a></li>
                            <!-- Dropdown Trigger -->
                           <!-- <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Dropdown<i class="material-icons right">arrow_drop_down</i></a></li>-->
                        </ul>
                        <ul class="right hide-on-med-and-down">
                            <li><a class="dropdown-button" href="#!" data-activates="dropdown1"><img height="50px" src="{{ asset('images/pluswhite.png') }}" alt="plus"></a></li>
                        </ul>
                    </div>
                </nav>
            {% endblock %}
            {% block header %}{% endblock %}


            {% block corps %}{% endblock %}
            {% block javascripts %}
                <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
                <script src="{{ asset('js/materialize.min.js') }}"></script>
            {% endblock %}
        </div>
    </body>
</html>

{% extends "@ESGamingNew/layout.html.twig" %}
{% block corps %}
    {% for new in news %}
        <div class="col s12 m4">
            <div class="card small">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src="{{ asset(new.mainBanner) }}">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">{{ new.title }}<i class="material-icons right">more_vert</i></span>
                </div>
                <div class="card-action">
                    <a href="{{ path('es_gaming_new_get',{'id':new.id}) }}">Lire la suite</a>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">{{ new.title }}<i class="material-icons right">close</i></span>
                    <p>{{ new.text | truncate(200, true, '...') }}</p>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
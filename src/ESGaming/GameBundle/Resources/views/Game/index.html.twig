{% extends "@ESGamingGame/layout.html.twig" %}
{% block corps %}
    {% for game in games %}
        <div class="col s12 m4">
            <div class="card small">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src="{{ asset(game.banner) }}">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">{{ game.name }}<i class="material-icons right">more_vert</i></span>
                </div>
                <div class="card-action">
                    <a href="{{ path('es_gaming_game_get',{'id':game.id}) }}">Lire la suite</a>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">{{ game.name }}<i class="material-icons right">close</i></span>
                    <p>{{ game.descShort | raw | truncate(200, true, '...') }}</p>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}